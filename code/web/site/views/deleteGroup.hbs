<h2>{{title}}</h2>
<p>{{description}}</p>
<form action="/users/:userId/groups/:groupId" method="POST">
    <input type="submit" value="Delete group">
</form>

<input type="button" value="Delete group with client script" id="b1">

<script type="application/ecmascript">
    const btn = document.querySelector("#b1")
    btn.onclick = handleClick
    async function handleClick() {
        const taskId = location.pathname
        
        const url = `/api${location.pathname}`
        const options = {
            method: 'DELETE',
            headers: {
                'Authorization': 'Bearer {{token}}'
            }
        
        }
        const response = await fetch(url, options)
        if(response.ok) {
            location = '/groups'
        }
    }
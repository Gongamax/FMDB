<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/style.css" />
    <title>Frontend Bootcamp</title>
  </head>
  <body>
    <!-- Showcase -->
    <section
      class="bg-dark text-light p-5 p-lg-0 pt-lg-5 text-center text-sm-start"
    >
      <div class="container">
        <div class="d-sm-flex align-items-center justify-content-between">
          <div>
            <h1>Welcome to FMDB -
              <span class="text-warning">Your Ultimate Movie Database
              </span></h1>
            <p class="lead my-4">
              Unleash the magic of cinema with FMDB, your go-to destination for
              exploring and discovering an infinite world of movies. Whether
              you're a cinephile or a casual movie lover, FMDB empowers you to
              search and create groups with your favorite films. Start your
              cinematic journey today and dive into the world of unlimited movie
              magic!
            </p>
            <a class="btn btn-primary btn-lg" href="/register">
              Register for Free
            </a>
          </div>
          <img
            class="img-fluid w-50 d-none d-sm-block"
            src="/images/monsters.png"
            alt=""
          />
        </div>
      </div>
    </section>
    <!-- Movie Cards Section -->
    <section class="bg-dark text-darkt p-5">
      <spacer type="horizontal" width="100" height="300"> ♢ </spacer>
      <div class="container mt-5">
        <h1><span class="text-warning">Upcoming Movies </span></h1>
        <spacer type="horizontal" width="100" height="1000"> ♢ </spacer>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <!-- Placeholder movie cards -->
          {{#each upcomingMovies}}
            <div class="col">
              <div class="movie-card bg-white p-4 h-100 d-flex flex-column">
                <img
                  src="{{image}}"
                  alt="Movie Poster"
                  class="img-fluid mb-3"
                />
                <h3 class="mb-0">{{title}} 1</h3>
                <p class="text-muted">Release Date: {{releaseDate}}</p>
                <p class="text-muted">Genres: {{genres}}</p>
                <p class="movie-description">{{overview}}</p>
                <div class="mt-auto">
                  <a
                    href="/movies/movie/{{id}}"
                    class="btn btn-primary"
                  >Details</a>
                </div>
              </div>
            </div>
          {{/each}}
          <!-- End of placeholder movie cards -->
        </div>
      </div>
    </section>

    <!-- Popular Movies Cards Section -->
    <section class="bg-dark text-darkt p-5">
      <spacer type="horizontal" width="100" height="300"> ♢ </spacer>
      <div class="container mt-5">
        <h1><span class="text-warning">Most Popular Movies </span></h1>
        <spacer type="horizontal" width="100" height="1000"> ♢ </spacer>
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <!-- Placeholder movie cards -->
          {{#each popularMovies}}
            <div class="col">
              <div class="movie-card bg-white p-4 h-100 d-flex flex-column">
                <img
                  src="{{image}}"
                  alt="Movie Poster"
                  class="img-fluid mb-3"
                />
                <h3 class="mb-0">{{title}} 1</h3>
                <p class="text-muted">Release Date: {{releaseDate}}</p>
                <p class="text-muted">Genres: {{genres}}</p>
                <p class="movie-description">{{overview}}</p>
                <div class="mt-auto">
                  <a
                    href="/movies/movie/{{id}}"
                    class="btn btn-primary"
                  >Details</a>
                </div>
              </div>
            </div>
          {{/each}}
          <!-- End of placeholder movie cards -->
        </div>
      </div>
    </section>

    <!-- Newsletter -->
    <section class="bg-warning text-dark p-5">
      <div class="container">
        <div class="d-md-flex justify-content-between align-items-center">
          <h3 class="mb-3 mb-md-0">Sign Up For Our Newsletter</h3>

          <div class="input-group news-input">
            <input
              type="text"
              id="news"
              class="form-control"
              placeholder="Enter Email"
            />
            <button class="btn btn-dark btn-lg" type="button">Submit</button>
          </div>
        </div>
      </div>
    </section>

  </body>
</html>
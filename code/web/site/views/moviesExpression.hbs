<div class="mask" style="background-color: rgba(0, 0, 0, 0.8); height:fit-content;">
<div class="text-white">
<center><h1>{{title}}:</h1></center>

<div style="float: right;">
  <form>
    <input type="hidden" name="expression" value="{{expression}}">
    <label for="limit">Limit:</label>
    <input type="number" name="limit" id="limit" value="{{limit}}">
    <label for="skip">Skip:</label>
    <input type="number" name="skip" id="skip" value="{{skip}}">
    <button type="submit" class="btn btn-outline-primary">Apply</button>
  </form>
</div>

<ul>
  {{#each movies}}
       {{#if poster_path}}
          <p><img src="{{poster_path}}" width="80" height="120" alt="">  <a href="/movies/movie/{{id}}">{{title}}</a></p>
          <p> Description: {{overview}}</p> 
       {{/if}} 
  {{/each}}
</ul>
</div>
</div>